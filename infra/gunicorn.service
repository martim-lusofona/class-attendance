[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/class-ping/class-ping
ExecStart=pipenv run gunicorn --access-logfile - --workers 3 --bind unix:/run/gunicorn.sock class-ping.wsgi:application

[Install]
WantedBy=multi-user.target